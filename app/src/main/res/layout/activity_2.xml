<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="285dp"
            android:layout_height="71dp"
            android:gravity="center"
            android:text="CHỌN CHỦ ĐỀ"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_thoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:text="Thoát"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbtn_caNhan"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ba" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cá nhân"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/imbtn_khachHang"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:src="@drawable/hai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Khách hàng"
                android:textSize="20dp" />

        </LinearLayout>

        <Space
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imbtn_CTBH"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chi tiết bán hàng"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageButton
                android:id="@+id/imbtn_danhsachTuyen"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Danh sách tuyển"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imbtn_TCSP"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="fitCenter"
                android:src="@drawable/nam" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tra cứu sản phẩm"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>